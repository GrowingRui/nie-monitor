{
  "manifest_version": 3,
  "name": "NIE Cita Monitor Pro v2.5",
  "version": "2.5",
  "description": "基于 Telegram 通知的西班牙预约自动化监控工具",
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://icp.administracionelectronica.gob.es/*",
    "https://api.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://icp.administracionelectronica.gob.es/icpplus/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}